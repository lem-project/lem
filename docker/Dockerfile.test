FROM fukamachi/qlot:latest

USER root
RUN apt-get update && apt-get install -y \
    build-essential \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY . .

# Install dependencies
RUN qlot install

# Run tests using standard lem-tests mechanism
# .qlot/bin/rove is installed by qlot
CMD ["/bin/bash", "-c", ".qlot/bin/rove lem-tests.asd && .qlot/bin/rove extensions/vi-mode/lem-vi-mode.asd"]
